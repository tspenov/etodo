<form id="edit-todo-form">
	<div class="form-group">
		<label>Title</label>
		{{input type="text" class="form-control" value=model.title
		placeholder="Add todo..."}}
	</div>
	<div class="form-group">
		<label>Due date</label>
		{{input type="date" class="form-control" value=model.date}}
	</div>
	<div class="form-group">
		<label>Body</label>
		{{textarea type="text" class="form-control" value=model.body
		placeholder="Todo body..."}}
	</div>
	<button {{action 'editTodo' model.id}} class="btn btn-primary">Submit</button>
	{{#link-to 'todos' class="btn btn-default"}} Close {{/link-to}}
	<button {{action 'deleteTodo' model.id}} class="btn btn-danger pull-right">Delete</button>
</form>