<form id="new-todo-form">
	<div class="form-group">
		<label>Title</label>
		{{input type="text" class="form-control" value=title
		placeholder="Add todo..."}}
	</div>
	<div class="form-group">
		<label>Due date</label>
		{{input type="date" class="form-control" value=date}}
	</div>
	<div class="form-group">
		<label>Body</label>
		{{textarea type="text" class="form-control" value=body
		placeholder="Todo body..."}}
	</div>
	<button {{action 'addTodo'}} class="btn btn-primary">Submit</button>
	{{#link-to 'todos' class="btn btn-default"}} Close {{/link-to}}
</form>